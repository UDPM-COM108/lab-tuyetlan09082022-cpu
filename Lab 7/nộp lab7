#include <stdio.h>
#include <string.h>
#include <ctype.h>

void bai1() {
    char str[1000];
    int nguyenAm = 0, phuAm = 0;

    printf("\nNhap vao 1 chuoi: ");
    fflush(stdin);
    fgets(str, sizeof(str), stdin);

    for (int i = 0; i < strlen(str); i++) {
        char c = tolower(str[i]);

        if (c >= 'a' && c <= 'z') { 
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u')
                nguyenAm++;
            else
                phuAm++;
        }
    }

    printf("So nguyen am: %d\n", nguyenAm);
    printf("So phu am: %d\n", phuAm);
}

void bai2() {
    char user[50], pass[50];
    char correctUser[] = "admin";
    char correctPass[] = "123";

    printf("\nNhap username: ");
    scanf("%s", user);

    printf("Nhap password: ");
    scanf("%s", pass);

    if (strcmp(user, correctUser) == 0 && strcmp(pass, correctPass) == 0)
        printf("Dang nhap thanh cong!\n");
    else
        printf("Dang nhap KHONG thanh cong!\n");
}

int main() {
    int choice;

    do {
        printf("\n========== MENU ==========\n");
        printf("1. Dem nguyen am va phu am trong chuoi\n");
        printf("2. Dang nhap bang username & password\n");
        printf("0. Thoat chuong trinh\n");
        printf("Chon: ");
        scanf("%d", &choice);
        getchar(); // Xóa Enter thừa

        switch (choice) {
            case 1:
                bai1();
                break;
            case 2:
                bai2();
                break;
            case 0:
                printf("Thoat...\n");
                break;
            default:
                printf("Lua chon khong hop le!\n");
        }
    } while (choice != 0);

    return 0;
}
